.broker-detail {
  width: 100%;
  padding-bottom: 130rpx;
}
.broker-detail .top {
  width: 100%;
  position: relative;
}
.broker-detail .top .top-pic {
  background: #D8D8D8;
  width: 100%;
  height: 270rpx;
  object-fit: cover;
  position: fixed;
  top: 0;
  z-index: -1;
}
.broker-detail .top .head-pic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 10rpx solid #fff;
  position: absolute;
  top: -60rpx;
  left: 43%;
}
.broker-detail .top .info-box {
  width: 90%;
  padding: 80rpx 30rpx 40rpx 40rpx;
  box-shadow: 0 -35px 31px 0 rgba(44, 47, 55, 0.5);
  border-radius: 16px 16px 0px 0px;
  background: #fff;
  margin-top: 240rpx;
}
.broker-detail .top .info-box .item-1 {
  font-size: 28rpx;
  color: #646D7F;
  display: flex;
}
.broker-detail .top .info-box .item-1 .item-name {
  margin-right: 30rpx;
  font-size: 32rpx;
  color: #2C2F37;
}
.broker-detail .top .info-box .item-1 .item-site {
  vertical-align: middle;
}
.broker-detail .top .info-box .item-1 .item-button {
  margin: 0;
  margin-left: auto;
  font-size: 28rpx;
  color: #FFFFFF;
  padding: 5rpx 20rpx;
  background: #1950BC;
  border-radius: 24rpx;
  line-height: 40rpx;
}
.broker-detail .top .info-box .item-2 {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #646D7F;
}
.broker-detail .top .info-box .item-2 .star {
  display: inline-block;
}
.broker-detail .comment-box {
  width: 100%;
  background: #fff;
}
.broker-detail .comment-box .comment-title {
  font-size: 28rpx;
  color: #475266;
  padding: 30rpx;
}
.broker-detail .comment-box .comment-title .check-all {
  float: right;
  font-size: 28rpx;
  color: #6595F4;
}
