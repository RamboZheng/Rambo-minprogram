.shade {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99999;
}
.shade .box {
  box-sizing: border-box;
  width: 690rpx;
  height: 430rpx;
  background: #ffffff;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-content: space-between;
}
.shade .box .title {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #2c2f37;
  text-align: center;
  line-height: 50rpx;
  font-weight: 600;
  margin-top: 70rpx;
}
.shade .box .contenet {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #475266;
  text-align: center;
  line-height: 40rpx;
  margin: 40rpx 0rpx;
}
.shade .box .btn {
  box-sizing: border-box;
  width: 100%;
  padding: 0rpx 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shade .box .btn button {
  width: 300rpx;
  height: 100rpx;
  box-shadow: 0 6rpx 15rpx 0 rgba(173, 188, 217, 0.5);
  border-radius: 50rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  letter-spacing: 0;
  line-height: 45rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60rpx;
}
.shade .box .btn button::after {
  border: none;
}
.shade .box .btn .no {
  background: #ffffff;
  color: #7ea5f4;
  margin-right: 10rpx;
}
.shade .box .btn .yes {
  background: #6595f4;
  color: #ffffff;
}
