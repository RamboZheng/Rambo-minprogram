.phone-block {
  width: 81%;
  position: fixed;
  top: 323rpx;
  background: #fff;
  z-index: 5;
  border-radius: 8rpx;
  left: 30rpx;
  padding: 80rpx 40rpx;
}
.phone-block .title {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  color: #2C2F37;
}
.phone-block .number {
  font-size: 28rpx;
  color: #475266;
  margin: 40rpx 0;
  text-align: center;
}
.phone-block .phone-button {
  display: flex;
}
.phone-block .phone-button .button {
  font-size: 28rpx;
  color: #FFFFFF;
  padding: 30rpx 115rpx;
  background: #1950BC;
  border-radius: 50rpx;
  margin: 0 5rpx;
}
.swiper-beijing {
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  position: fixed;
  top: 0;
  z-index: 4;
}
