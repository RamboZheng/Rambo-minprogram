.item {
  width: 100%;
  height: 600rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item .noData-pic {
  width: 194rpx;
  height: 324rpx;
}
.item .showImg {
  width: 100%;
  text-align: center;
}
.item .indexImg {
  width: 100%;
  margin: 0 auto;
  text-align: center;
}
.item .indexImg .noData-pic {
  width: 300rpx;
  height: 324rpx;
}
.item .indexImg .index-tip {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #475266;
}
.item .indexImg .index-tip .noData-icon {
  width: 42rpx;
  height: 42rpx;
  vertical-align: top;
}
