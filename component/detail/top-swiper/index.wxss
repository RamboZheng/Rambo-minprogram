.box {
  width: 92%;
  margin: 0 auto;
}

.banner {
  width: 100%;
  margin: 30rpx 0;
}

.banner-box {
  position: relative;
  width: 92%;
  height: 420rpx;
  margin: 0 auto;
}

.banner .banner-content {
  width: 100%;
  height: 420rpx;
  margin: 0 auto;
  border-radius: 16rpx;
  background-image: url(https://cdn-1.baidu.com/baidu-miniprogram/static/imgs/img-690pic-default@2x.png?tdsourcetag=s_pcqq_aiomsg);
  /* background-image: url(https://cdn-1.baidu.com/baidu-miniprogram/static/imgs/img-home-bg@2x.png?tdsourcetag=s_pcqq_aiomsg); */
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  overflow: hidden;
}
.banner .banner-content .item {
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}
.banner .banner-content .item image {
  width: 100%;
  border-radius: 16rpx;
}

.banner .dot-number {
  position: absolute;
  bottom: 25rpx;
  left: 30rpx;
  width: 100rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 26rpx;
}

.banner .dot-number.dot-center {
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.layoutImg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 16;
  background: #2c2f37;
}

.layoutImg .layout-top {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  overflow-x: scroll;
}

.layoutImg .layout-top::-webkit-scrollbar {
  display: none;
}

.layoutImg .layout-top .layou-list {
  display: flex;
  align-items: center;
  padding-top: 19rpx;
}

.layoutImg .layout-top .layou-list .item {
  margin-left: 30rpx;
  /* min-width: 122rpx; */
  padding-bottom: 22rpx;
  border-bottom: 2rpx solid transparent;
  white-space: nowrap;
}

.layoutImg .layout-top .layou-list .item.on {
  color: #6595f4;
  border-bottom: 2rpx solid #6595f4;
}

.layoutImg .layout-content {
  height: calc(100% - 80rpx - 128rpx);
}
.layoutImg.full .layout-content {
  height: 100%;
}

.layoutImg .layout-content .layout-scale {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.layoutImg .layout-content .layout-scale image {
  width: 100%;
  height: 500rpx;
}

.hidden {
  display: none;
}
